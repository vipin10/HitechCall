<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f7f7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordeeer"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textColor="#FF6666"
                android:text="Contact No*"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="end"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:focusableInTouchMode="false"
                android:gravity="end"
                android:singleLine="true" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordeeer"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact *"
                android:textColor="#FF6666"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/contactperson"
                android:layout_width="match_parent"
                android:layout_gravity="end"
                android:text="Recruiter Name"
                android:layout_marginEnd="5dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="#ffffff"
                android:focusableInTouchMode="false"
                android:gravity="end" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordeeer"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Select an Module *"
                android:textColor="#FF6666"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="20sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spinProfileItem"
                style="@style/spinner_style"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordeeer"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Select a Subject *"
                android:textColor="#FF6666"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp" />

            <Spinner
                android:id="@+id/spinnerItem3"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordeeer"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Select an Action *"
                android:textColor="#FF6666"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="20sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spinProAction"
                style="@style/spinner_style"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordeeer"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anchor / Owner *"
                android:textColor="#FF6666"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/anchor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="end"
                android:background="#ffffff"
                android:focusableInTouchMode="false"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordeeer"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Description*"
                android:textColor="#FF6666"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/calldescription"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="5dp"
                android:background="#ffffff"
                android:imeOptions="flagNoExtractUi"
                android:gravity="start"
                android:hint="Type Description" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>