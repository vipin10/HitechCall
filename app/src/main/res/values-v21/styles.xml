<resources>>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">#FFFFFF</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#074a85</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor">#074a85</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="splashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">#085394</item>
        <item name="android:background">#085394</item>
    </style>

    <style name="actionBarStyle">
        <item name="android:windowBackground">@color/LoginBack</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:colorPrimary">#FFFFFF</item>
        <item name="android:colorPrimaryDark">#FFFFFF</item>
        <item name="android:colorAccent">#FFFFFF</item>
        <item name="android:itemBackground">#FFFFFF</item>
    </style>

    <style name="accountstyle">
        <item name="android:background">#085394</item>
    </style>

    <style name="account" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor">#074a85</item>
        <item name="colorPrimary">#085394</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:editTextColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <!--<item name="android:actionBarStyle">@style/accountstyle</item>-->
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_p_bar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="navHome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#074a85</item>
    </style>

    <style name="loginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:background">#085394</item>
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:editTextColor">#ffffff</item>
        <item name="android:statusBarColor">#085394</item>
        <item name="colorControlActivated">#FFFFFF</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:windowBackground">@color/AppAppBar</item>
        <item name="android:colorBackground">#085394</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

</resources>
